rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // シールアルバム用
    match /sticker-album/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // プロフィールアイコン用
    match /profile-icons/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
